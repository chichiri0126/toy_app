<% provide(:title, 'Thread') %>
<h1><%= @thread.title %></h1>
<div>
  <span><%= @thread.description %></span>
</div>

<div>
  <% if @comments.any? %>
    <h2>Comments (<%= @comments.count %>)</h2>

    <% @comments.each do |comment| %>
      <%= render "user_comments/comment", comment: comment %>
    <% end %>

    <%#= will_paginate @microposts %>
  <% end %>
</div>

<div>
  <%= form_for(@comment, url: comment_create_path) do |f| %>

    <%= hidden_field_tag :user_thread_id, f.object.user_thread_id %>

    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control' %>

    <%= f.submit "create", class: "btn btn-primary" %>
  <% end %>
</div>